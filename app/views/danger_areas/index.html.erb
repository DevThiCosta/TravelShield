<div class="banner p-5" style="background: linear-gradient(to top right, #003366 25%, #660033 80%);">
  <h1 class="display-4" style="color: white;">Áreas Perigosas</h1>
</div>

<div class="row justify-content-around mt-4 mb-4">
  <% @danger_areas.each do |danger_area| %>
  <div class="danger-areas-cards mb-2 mt-2">
        <%= link_to danger_area_path(danger_area.id) do %>
          <%= image_tag("https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg") %>
        <% end %>
      <div class="danger-areas-cards-infos">
        <h2><%= danger_area.name %></h2>
      </div>
    </div>
  <% end %>
  </div>
</div>

<div>
  <%= link_to "Nova Área", new_danger_area_path, class: "btn btn-primary" %>
</div>
