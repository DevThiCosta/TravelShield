<h1>Áreas Perigosas</h1>

<div class="row">
  <div class="col">
    <ul class="list-group">
      <% @danger_areas.each do |danger_area| %>
        <li class="list-group-item">
          <%= link_to danger_area.name, danger_area_path(danger_area.id) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= link_to "Nova Área", new_danger_area_path, class: "btn btn-primary" %>
  </div>
</div>
