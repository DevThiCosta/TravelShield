<div class="banner p-5" style="background: linear-gradient(to top right, #003366 25%, #660033 80%);">
  <h1 class="display-4" style="color: white;">Áreas Perigosas</h1>
</div>

<div class="row justify-content-around mt-4 mb-4">
  <div class="text-center" style="width: 100%;">
    <%= link_to "Nova Área", new_danger_area_path, class: "btn btn-primary", style: "width: 75%;" %>
  </div>
</div>

<div class="row justify-content-around">
  <% @danger_areas.each do |danger_area| %>
    <%
      risk_color = case danger_area.risk
                   when 1
                     '#FFFF00' # Amarelo para risco baixo
                   when 2
                     '#FFD700' # Dourado para risco médio
                   when 3
                     '#FFA500' # Laranja para risco alto
                   when 4
                     '#FF4500' # Laranja avermelhado para risco crítico
                   when 5
                     '#FF0000' # Vermelho para risco muito crítico
                   else
                     '#FFFFFF' # Branco para casos não especificados
                   end
    %>
    <div class="danger-areas-cards col-6 mb-2 mt-2">
      <%= link_to danger_area_path(danger_area.id) do %>
        <div style="background: black; width: 100px; height: 200px; display: flex; align-items: center; justify-content: center;">
          <i class="fa-solid fa-skull-crossbones" style="color: <%= risk_color %>; font-size: 2rem;"></i>
        </div>
      <% end %>
      <div class="danger-areas-cards-infos">
        <h2><%= danger_area.name %></h2>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%== pagy_bootstrap_combo_nav_js(@pagy) %>
</div>

<div class="mb-5"></div>
