<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h2 class="mb-0">Registro de uma Nova Área</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for @danger_area, html: { class: 'form-horizontal' } do |f| %>
            <div class="form-group row">
              <div class="col-sm-12">
                <%= f.input :name, label: "Nome", input_html: { class: 'form-control' } %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-12">
                <%= f.input :description, label: "Descrição", input_html: { class: 'form-control' } %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-12">
                <%= f.input :city_id, label: "Cidade", collection: City.all.map { |city| [city.name, city.id] }, prompt: "Selecione a cidade", input_html: { class: 'form-control' } %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.input :latitude, label: "Latitude", input_html: { class: 'form-control' } %>
              </div>
              <div class="col-sm-6">
                <%= f.input :longitude, label: "Longitude", input_html: { class: 'form-control' } %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.input :risk, collection: 1..5, prompt: "Selecione o risco", label: "Risco", input_html: { class: 'form-control' } %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col text-center">
                <%= f.button :submit, "Registrar", class: 'btn btn-primary mr-2' %>
                <%= link_to "Cancelar", danger_areas_path, class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
