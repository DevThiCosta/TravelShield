<div class="card">
  <div class="card-body">
    <h2 class="text-center">Registro de uma Nova Ã¡rea</h2>
    <%= simple_form_for @danger_area, html: { class: 'form-horizontal' } do |f| %>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.input :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.input :description, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.input :latitude, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.input :longitude, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.input :risk, collection: 1..5, prompt: "Select risk", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.button :submit, "Registrar", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
