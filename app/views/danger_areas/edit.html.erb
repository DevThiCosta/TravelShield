<%= form_with(model: @danger_area, url: danger_area_path(@danger_area), method: :patch, class: "form") do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :risk %>
    <%= form.select :risk, options_for_select([1, 2, 3, 4, 5], @danger_area.risk), class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Update Danger Area", class: "btn btn-primary" %>
  </div>
<% end %>
