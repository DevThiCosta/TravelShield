<%= form_with(model: @danger_area, url: danger_area_path(@danger_area), method: :patch, class: "form") do |form| %>
  <div class="form-group row">
    <%= form.label :name, "Nome", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :city_name, "Nome da Cidade", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :city_name, value: @danger_area.city.name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, "Descrição", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :longitude, "Longitude", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :longitude, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :latitude, "Latitude", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :latitude, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :risk, "Risco", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :risk, options_for_select([1, 2, 3, 4, 5], @danger_area.risk), class: "form-control" %>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit "Atualizar Área Perigosa", class: "btn btn-primary" %>
  </div>
<% end %>
