<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <div class="profile mb-4">
        <div class="avatar mb-3 " style="margin: 0 auto;">
          <%= image_tag @profile_user.avatar, class: "rounded-circle", style: "width: 300%; margin: 0 auto;" %>
        </div>

        <div class="social-info mb-3">
          <p class="h5">
            <%= rand(1..320) %> viagens • <%= rand(100..10_000_000) %> Seguidores • <%= rand(100..10_000_000) %> Seguindo
          </p>
        </div>
      </div>

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title">Bio</h5>
          <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec purus ac libero ultricies aliquam. Nullam nec purus ac libero ultricies aliquam.</p>
        </div>
      </div>

 <ul class="list-group">
        <li class="list-group-item">
          <!-- Verifica se o usuário logado é o mesmo que o usuário do perfil -->
          <% if current_user == @profile_user %>
            <!-- Se sim, exibe o link normalmente -->
            <%= link_to "Lugares Salvos", "#", class: "text-decoration-none" %>
          <% else %>
            <!-- Se não, adiciona a classe 'disabled' para desabilitar o link -->
            <a href="#" class="text-decoration-none disabled">
              <i class="fas fa-lock"></i> Lugares Salvos
            </a>
          <% end %>
        </li>
        <li class="list-group-item">
          <!-- Mesma lógica para o botão "Informações" -->
          <% if current_user == @profile_user %>
            <%= link_to "Informações", profile_user_info_path(@profile_user), class: "text-decoration-none" %>
          <% else %>
            <a href="#" class="text-decoration-none disabled">
              <i class="fas fa-lock"></i> Informações
            </a>
          <% end %>
        </li>
        <li class="list-group-item">
          <!-- Botão "Avaliações" sempre habilitado -->
          <%= link_to "Avaliações", review_path(@profile_user), class: "text-decoration-none" %>
        </li>
        <li class="list-group-item">
          <!-- Botão "Sair" (não tenho informações sobre essa lógica, mas você pode adaptar) -->
          <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "text-decoration-none text-danger" %>
        </li>
      </ul>
    </div>
  </div>
</div>
