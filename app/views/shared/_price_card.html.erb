<div class="col-12 col-md-6 col-lg-4 mb-4">
  <div class="h-100 flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front">
        <span class="price" style="font-size: 3.75rem;"><%= price %></span>/ano<br>
        <br>
        <h2 class="card-title" style="font-size: 1.75rem;"><%= title %></h2>
        <small style="font-size: 1.25rem;"><%= subtitle %></small>
      </div>
      <div class="flip-card-back">
        <ul class="list-group list-group-flush">
          <% features.each do |feature| %>
            <li class="list-group-item" style="font-size: 1.25rem;">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
              </svg> <%= feature %>
            </li>
          <% end %>
        </ul>
        <button class="my-5 btn btn-outline-primary btn-lg" style="font-size: 1.25rem;">Selecione</button>
      </div>
    </div>
  </div>
</div>
