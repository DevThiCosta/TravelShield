<div class="banner py-5" style="background: linear-gradient(to top right, #003366 25%, #660033 80%);">
  <h1 class="display-4" style="color: white; font-size: 3rem;">Contato</h1>
</div>
<div class="container my-5">
  <h2 class="text-center mb-4" style="font-size: 1.75rem;">Envie sua mensagem</h2>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <form action="/enviar-contato" method="post">
            <div class="form-group mb-3">
              <label for="nome" class="form-label" style="font-size: 1.25rem;">Nome:</label>
              <input type="text" class="form-control" id="nome" name="nome" required style="font-size: 1.25rem;">
            </div>

            <div class="form-group mb-3">
              <label for="email" class="form-label" style="font-size: 1.25rem;">E-mail:</label>
              <input type="email" class="form-control" id="email" name="email" required style="font-size: 1.25rem;">
            </div>

            <div class="form-group mb-3">
              <label for="mensagem" class="form-label" style="font-size: 1.25rem;">Mensagem:</label>
              <textarea class="form-control" id="mensagem" name="mensagem" rows="4" required style="font-size: 1.25rem;"></textarea>
            </div>

            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-primary btn-lg" style="font-size: 1.25rem;">Enviar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
