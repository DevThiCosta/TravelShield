<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-body p-5">
          <h2 class="text-center mb-4">Nova Avaliação</h2>
          <%= form_with(model: @review, url: reviews_path, method: :post, class: "form-horizontal") do |form| %>
            <div class="form-group mb-3">
              <%= form.label :city_id, "Cidade", class: "form-label" %>
              <%= form.collection_select :city_id, City.all, :id, :name, {}, { class: "form-select" } %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :title, "Título", class: "form-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :comment, "Comentário", class: "form-label" %>
              <%= form.text_area :comment, class: "form-control", rows: 5 %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :rate, "Nota", class: "form-label" %>
              <%= form.select :rate, options_for_select(1..5), {}, class: "form-select" %>
            </div>

            <div class="form-group text-center">
              <%= form.submit "Enviar", class: "btn btn-info btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
