<%= form_with(model: @review, url: reviews_path, method: :post, class: "form") do |form| %>
  <div class="form-group">
    <%= form.label :Titulo, class: "control-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= form.label :Comentario, class: "control-label" %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Nota, class: "control-label" %>
    <%= form.select :rating, (1..5), class: "form-control" %>
  </div>
  <div class="form-group">

    <%= form.submit "Enviar", class: "btn btn-info" %>
  </div>
<% end %>
