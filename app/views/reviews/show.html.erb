<div class="container my-5">
  <h1 class="text-center mb-4"><%= current_user.name %>!</h1>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Suas Avaliações:</h2>
    <div>
      <%= link_to 'Nova Avaliação', new_review_path, class: 'btn btn-info me-2' %>
      <%= link_to 'Todas as Avaliações', reviews_path, class: 'btn btn-info' %>
    </div>
  </div>

  <div class="row gx-4 gy-4">
    <% current_user.reviews.each do |review| %>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm rounded">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2"><%= review.title %></h5>
            <p class="card-text flex-grow-1"><%= review.comment %></p>
            <p class="card-text mt-auto mb-0">Nota: <%= review.rate %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
