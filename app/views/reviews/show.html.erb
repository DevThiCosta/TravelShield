<div class="container my-5">
  <h1 class="text-center mb-4">Bem-vindo, <%= current_user.name %>!</h1>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Suas Avaliações</h2>
    <div>
      <%= link_to 'Nova Avaliação', new_review_path, class: 'btn btn-primary btn-sm me-2' %>
      <%= link_to 'Todas as Avaliações', reviews_path, class: 'btn btn-secondary btn-sm' %>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% current_user.reviews.each do |review| %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= review.title %></h5>
            <p class="card-text"><%= review.comment %></p>

            <div class="mt-auto d-flex justify-content-between align-items-end">
              <div>
                <%= star_rating(review.rate) %>
              </div>
              <div>
                <%= link_to reviews_info_path(review), class: "text-secondary" do %>
                  <i class="fas fa-info"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
