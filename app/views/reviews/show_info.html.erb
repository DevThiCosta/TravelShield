<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h3 class="card-title"><%= @review.title %></h3>
          <div class="mb-4">
            <strong>Avaliação:</strong>
            <span class="text-warning"><%= star_rating(@review.rate) %></span>
          </div>
          <div class="mb-4">
            <strong>Comentário:</strong>
            <p class="card-text"><%= @review.comment %></p>
          </div>
          <div class="mb-4">
            <strong>Usuário:</strong>
            <p class="card-text"><%= @review.user.name %></p>
          </div>
          <div class="mb-4">
            <strong>Cidade:</strong>
            <p class="card-text"><%= @review.city.name %></p>
          </div>
          <div class="d-flex justify-content-between mt-4">
            <%= link_to 'Ver mais avaliações deste usuário', user_reviews_path(@review.user), class: 'btn btn-primary' %>
            <%= link_to 'Ver mais sobre esta cidade', city_path(@review.city), class: 'btn btn-secondary' %>
            <%= link_to 'Voltar para Avaliações', reviews_path, class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
