<!-- app/views/cities/index.html.erb -->

<div class="row">
  <% @cities.each do |city| %>
    <div class="col-md-3">
      <div class="card mb-4 rounded">
        <%= link_to city_path(city) do %>
          <div class="card-body">
            IMAGEM NO BACKGROUND
            <h5 class="card-title"><%= city.name %></h5>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
